<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.bloom_russo.ui.CalendarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/monthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/weekDaysHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <TextView android:text="Sun" style="@style/WeekDayText"/>
            <TextView android:text="Mon" style="@style/WeekDayText"/>
            <TextView android:text="Tue" style="@style/WeekDayText"/>
            <TextView android:text="Wed" style="@style/WeekDayText"/>
            <TextView android:text="Thu" style="@style/WeekDayText"/>
            <TextView android:text="Fri" style="@style/WeekDayText"/>
            <TextView android:text="Sat" style="@style/WeekDayText"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/weekDaysHeader"
            app:layout_constraintBottom_toTopOf="@+id/bottomDetailPanel"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomDetailPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedDateText}"
                tools:text="Jan 13"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/cycleDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.cycleDayText}"
                tools:text="Cycle Day 10"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/selectedDateText"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Edit"
                android:backgroundTint="#E1BEE7"
                android:textColor="@color/purple_700"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawableTint="@color/purple_700"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/fertilityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.fertilityText}"
                tools:text="MEDIUM - Chance of getting pregnant"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:drawablePadding="8dp"
                app:layout_constraintTop_toBottomOf="@id/cycleDayText"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_rounded_button"
                android:backgroundTint="@color/purple_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/fertilityText"
                app:layout_constraintBottom_toBottomOf="@id/fertilityText"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to add note"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/fertilityText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/arrow_down_float"
                app:layout_constraintTop_toBottomOf="@id/fertilityText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="36dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>