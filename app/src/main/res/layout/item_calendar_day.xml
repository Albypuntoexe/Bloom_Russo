<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <View
        android:id="@+id/dayBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_rounded_button"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/dayBackground"
        app:layout_constraintEnd_toEndOf="@+id/dayBackground"
        app:layout_constraintStart_toStartOf="@+id/dayBackground"
        app:layout_constraintTop_toTopOf="@+id/dayBackground" />

    <ImageView
        android:id="@+id/dayIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="@id/dayBackground"
        app:layout_constraintEnd_toEndOf="@id/dayBackground"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:visibility="gone"
        app:tint="@color/bloom_primary" />

</androidx.constraintlayout.widget.ConstraintLayout>