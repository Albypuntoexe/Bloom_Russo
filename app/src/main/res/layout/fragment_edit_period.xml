<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/black"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit dates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weekDaysHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <TextView android:text="Sun" style="@style/WeekDayText"/>
            <TextView android:text="Mon" style="@style/WeekDayText"/>
            <TextView android:text="Tue" style="@style/WeekDayText"/>
            <TextView android:text="Wed" style="@style/WeekDayText"/>
            <TextView android:text="Thu" style="@style/WeekDayText"/>
            <TextView android:text="Fri" style="@style/WeekDayText"/>
            <TextView android:text="Sat" style="@style/WeekDayText"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/editRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/weekDaysHeader"
            app:layout_constraintBottom_toTopOf="@id/btnSaveContainer"/>

        <FrameLayout
            android:id="@+id/btnSaveContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="@color/bloom_primary"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:padding="12dp"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>