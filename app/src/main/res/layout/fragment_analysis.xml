<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"> <LinearLayout
    android:id="@+id/profileHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:background="@drawable/circle_filled_pink"
        android:padding="16dp"
        app:tint="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_top_white"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/profileHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btnMyCycles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My cycles"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:drawableTint="@color/gray_icon"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

        <TextView
            android:id="@+id/btnReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:drawableTint="@color/gray_icon"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

        <TextView
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:drawableTint="@color/gray_icon"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>